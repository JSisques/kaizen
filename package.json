{
  "name": "kaizen",
  "version": "1.0.0",
  "description": "A schematic generator for TypeScript DDD projects",
  "scripts": {
    "build": "tsc -p tsconfig.json && node -e \"const fs = require('fs'); fs.cpSync('src/nestjs-module/files', 'dist/nestjs-module/files', {recursive: true, force: true}); fs.cpSync('src/nestjs-module/schema.json', 'dist/nestjs-module/schema.json', {force: true}); fs.cpSync('src/collection.json', 'dist/collection.json', {force: true})\"",
    "test": "pnpm run build && jasmine dist/**/*_spec.js",
    "schematics": "schematics",
    "lint": "eslint \"src/**/*.ts\" --ignore-pattern \"**/files/**\" --fix",
    "lint:check": "eslint \"src/**/*.ts\" --ignore-pattern \"**/files/**\"",
    "format": "prettier --write \"src/**/*.{ts,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"src/**/*.{ts,json,md}\" --ignore-path .prettierignore",
    "prepare": "husky install",
    "postinstall": "pnpm run build"
  },
  "keywords": [
    "schematics",
    "ddd",
    "domain-driven-design",
    "typescript",
    "nestjs"
  ],
  "author": "",
  "license": "MIT",
  "schematics": "./dist/collection.json",
  "dependencies": {
    "@angular-devkit/core": "^17.0.0",
    "@angular-devkit/schematics": "^17.0.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/jasmine": "^5.1.4",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jasmine": "^5.1.1",
    "lint-staged": "^15.5.2",
    "prettier": "^3.1.1",
    "typescript": "~5.3.3"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --ignore-pattern \"**/files/**\"",
      "prettier --write --ignore-path .prettierignore"
    ],
    "*.{json,md}": [
      "prettier --write --ignore-path .prettierignore"
    ]
  }
}
